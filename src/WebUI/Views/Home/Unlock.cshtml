
@inject IViewLocalizer language
<body>
    <div class="panel panel-primary">
        <div class="panel-heading">@language["unLocked"]</div>
        <div class="panel-body">
            <form method="POST" onsubmit="return false">
                <div class="form-group">
                    <div class="form-group has-feedback">
                        <label>@language["username"]</label>
                        <input class="form-control" type="text" id="UserName" />
                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group has-feedback">
                        <div class="row">
                            <div class="input-group" style="position: relative;left: 15px;">
                                <label>@language["captcha"]</label>
                            </div>
                            <div class="col-sm-3" style="margin-top:5px;">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input readonly id="generated-captcha" type="text" class="form-control capturebackground">
                                        <div class="refreshiconStyle input-group-addon" id="refresh">
                                            <i class='fa fa-refresh' style=" font-size: 20px;text-align: center;width: 100%;"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <input style=" width: 260px;" id="entered-captcha" type="text" placeholder="@language["captchaInputplaceholder"] " class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="divSeparator">
                    </div>
                    <input type="submit" value="@language["unLock"]" id="UnlockButton" class="btn btn-default" onclick="Unlock()" />
                </div>     
            </form>
        </div>
    </div>
</body>


